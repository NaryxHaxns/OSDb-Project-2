<%- include('../partials/header') %>

<main>
    <section>
        <div class="catHeads">Title: </div>
        <div><%= production.title %></div>
        <div class="catHeads">Playwright: </div>
        <div><%= production.playwright %></div>
        <div class="catHeads">Debut: </div>
        <div><%= production.debut %></div>
        <div class="catHeads">Genre: </div>
        <div><%= production.genre %></div>
        <div class="catHeads">Synopsis: </div>
        <div><%= production.synopsis %></div>
        <div class="catHeads">Cast: </div>
        <ul>
            <%- production.cast.map(p => `<li>${p.name}</li>`).join('') %>
        </ul>
    </section>
    <% if (user) { %>
        <a class="linkBtn" href="/production/<%= production._id %>/addPerformer">Add to Cast</a>
        <a class="linkBtn" href="/production/<%= production._id %>/edit">Edit Production</a>
        <a class="linkBtn" href="/production/<%= production._id %>/remove">Delete Production</a>
    <% } else {} %>
</main>

<%- include('../partials/footer') %>