<%- include('../partials/header') %>

<main>
    <form id="editProd" action="/production/<%= production._id %>?_method=PUT" method="POST">
        <label>Title:</label>
        <input type="text" name="title" value="<%= production.title %>">
        <label>Playwright:</label>
        <input type="text" name="playwright" value="<%= production.playwright %>">
        <label>Debut:</label>
        <input type="Date" name="debut">
        <label>Genre:</label>
        <input type="text" name="genre" value="<%= production.genre %>">
        <label>Synopsis:</label>
        <textarea id="syn" name="synopsis"></textarea>
        <br>
        <input type="submit" value="Edit Production">
    </form>
</main>

<%- include('../partials/footer') %>