<%- include('../partials/header') %>

<main>
    <section>
        <div class="prodHeads">Title: </div>
        <div><%= productions.title %></div>
        <div class="prodHeads">Playwright: </div>
        <div><%= productions.playwright %></div>
        <div class="prodHeads">Debut: </div>
        <div><%= productions.debut %></div>
        <div class="prodHeads">Genre: </div>
        <div><%= productions.genre %></div>
        <div class="prodHeads">Synopsis: </div>
        <div><%= productions.synopsis %></div>
        <div class="prodHeads">Cast: </div>
        <ul>
            <%- productions.cast.map(p => `<li>${p.name}</li>`).join('') %>
        </ul>
    </section>
    <% if (user) { %>
        <a href="/productions/<%= productions._id %>/addPerformer"><input type="submit" value="Add to Cast"></a>
        <a href="/productions/<%= productions._id %>/edit"><input type="submit" value="Edit"></a>
    <% } else {} %>
</main>

<%- include('../partials/footer') %>