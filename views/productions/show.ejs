<%- include('../partials/header') %>

<main>
    <section>
        <div class="catHeads">Title: </div>
        <div><%= production.title %></div>
        <div class="catHeads">Playwright: </div>
        <div><%= production.playwright %></div>
        <div class="catHeads">Debut: </div>
        <div><%= production.debut %></div>
        <div class="catHeads">Genre: </div>
        <div><%= production.genre %></div>
        <div class="catHeads">Synopsis: </div>
        <div><%= production.synopsis %></div>
        <div class="catHeads">Cast: </div>
        <ul>
            <% if(production.cast){ %>
                <% production.cast.forEach(function(p){ %>
                    <li class="castNames"><%= p.role %> - <a class="pHeads" href="/performers/<%= p.performer._id %>"><%= p.performer.name %></a></li>
                <% }) %>
            <% } %>
        </ul>
    </section>
    <% if (user) { %>
        <a class="linkBtn" href="/productions/<%= production._id %>/addPerformer">Add to Cast</a>
        <a class="linkBtn" href="/productions/<%= production._id %>/edit">Edit Production</a>
        <a class="linkBtn" href="/productions/<%= production._id %>/remove">Delete Production</a>
    <% } else {} %>
</main>

<%- include('../partials/footer') %>