<%- include('../partials/header') %>

<main>
    <section>
        <h2><%= production.title %></h2>
        <img class="pImg" src="<%= production.showimg %>" alt="Production Image">
        <div class="catHeads">Playwright: </div>
        <div><%= production.playwright %></div>
        <div class="catHeads">Debut: </div>
        <div><%= production.debut.toLocaleDateString() %></div>
        <div class="catHeads">Genre: </div>
        <div><%= production.genre %></div>
        <div class="catHeads">Synopsis: </div>
        <div><%= production.synopsis %></div>
        <div class="catHeads">Cast: </div>
        <ul>
            <% if(production.cast){ %>
                <% production.cast.forEach(function(p){ %>
                    <li class="castNames"><%= p.role %> - <a class="pHeads" href="/performers/<%= p.performer._id %>"><%= p.performer.name %></a></li>
                <% }) %>
            <% } %>
        </ul>
    </section>
    <% if (user) { %>
        <a class="linkBtn" href="/productions/<%= production._id %>/addPerformer">Add to Cast</a><br>
        <a class="linkBtn" href="/productions/<%= production._id %>/edit">Edit Production</a><br>
        <a class="linkBtn" href="/productions/<%= production._id %>/remove">Delete Production</a><br>
    <% } else {} %>
    <h5>Uploaded by <%= user[0].name %></h5>
</main>

<%- include('../partials/footer') %>