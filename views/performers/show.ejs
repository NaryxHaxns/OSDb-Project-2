<%- include('../partials/header') %>

<main>
    <section>
        <div class="catHeads">Name: </div>
        <div><%= performer.name %></div>
        <div class="catHeads">Birthdate: </div>
        <div><%= performer.born %></div>
        <div class="catHeads">Bio: </div>
        <div><%= performer.bio %></div>
        <div class="catHeads">Roles: </div>
        <ul>
            <% performer.roles.forEach(function(r){ %>
            <li class="castNames"><%= r %></li>
            <% }) %>
        </ul>
    </section>
    <% if (user){ %>
    <a class="linkBtn" href="/performers/<%= performer._id %>/addRoll">Add a Role</a>
    <a class="linkBtn" href="/performers/<%= performer._id %>/edit">Edit Performer</a>
    <a class="linkBtn" href="/performers/<%= performer._id %>/remove">Delete Performer</a>
    <% } else {} %>
</main>

<%- include('../partials/footer') %>